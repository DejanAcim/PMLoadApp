<h2>Score your current load</h2>

<%= form_for(@load, url: {action: "create"}) do |f| %>
	<div class="form-group">
		<div class="control-label col-md-1">
			<%= f.label :score %>
		</div>
		<div class="col-md-3">
			<%= f.text_field :score, class: 'form-control', placeholder: "Score your load", autofocus: true %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-md-1">
			<%= f.label :date %>
		</div>
		<div class="col-md-3">
			<%= f.date_field :date, class: 'form-control', placeholder: "Entry date", default: Time.now.to_datetime %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-1 col-md-3">
			<%= f.submit class: "btn btn-primary btn-lg pull-right" %>
		</div>
	</div>
<% end %>
