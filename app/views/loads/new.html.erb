<h2>Score your current load</h2>

<%= form_for(@load, url: {action: "create"}) do |f| %>
	<div class="form-group">
		<div class="control-label col-md-1">
			<%= f.label :score %>
		</div>
		<div class="col-md-1">
			<%= f.number_field :score, in: 1..6, step: 1, class: 'form-control', autofocus: true %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-md-1">
			<%= f.label :date %>
		</div>
		<div class="col-md-3">
			<%= f.date_select :date, class: 'form-control' %>
		</div>
	</div>
		<div class="form-group">
		<div class="control-label col-md-1">
			<%= f.label :checkpoint %>
		</div>
		<div class="col-md-1">
			<%= f.number_field :checkpoint, in: 10..16, step: 3.00, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-1 col-md-3">
			<%= f.submit class: "btn btn-primary btn-lg pull-right" %>
		</div>
	</div>
<% end %>
